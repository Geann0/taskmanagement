{
  "env": {
    "node": true,
    "es2020": true,
    "jest": true
  },
  "extends": ["airbnb-typescript/base"],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "project": ["./tsconfig.json", "../tsconfig.json"]
  },
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-console": ["warn", { "allow": ["warn", "error", "info"] }],
    "import/extensions": "off"
  }
}
